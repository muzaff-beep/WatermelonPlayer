<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#CC000000">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="16dp"
        android:text="Song Title" />  <!-- Will be updated dynamically -->

    <!-- Progress Bar (DefaultTimeBar from Media3) -->
    <androidx.media3.ui.DefaultTimeBar
        android:id="@+id/exo_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Playback Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/prev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/exo_ic_skip_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous" />

        <ImageButton
            android:id="@+id/play_pause"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/exo_ic_play"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Play/Pause" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/exo_ic_skip_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next" />
    </LinearLayout>
</LinearLayout>
